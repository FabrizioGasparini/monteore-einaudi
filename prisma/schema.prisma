// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model Activity {
  id Int @id @default(autoincrement())
  name String
  description String @default("")
  startTime DateTime
  endTime DateTime
  duration Int
  subscriptions Subscription[]
  maxNumber Int
  location String @default("")
}

model LoginExclude {
  email String @id
}

model User {
  email String @id
  class String
}

model AdminList {
  email String @id
}

model Subscription {
  id Int @id @default(autoincrement())
  email String
  name  String
  class String

  activity Activity @relation(references: [id], fields: [activityId])
  activityId Int
  position Int


  @@unique([activityId, email, position], name: "EmailActivity")
}

model Info {
  tipo String @id
  valore String
}

model ExcludedClasses {
  classe String @id
}